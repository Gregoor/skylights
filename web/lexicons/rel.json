{
  "lexicon": 1,
  "id": "my.skylights.rel",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "properties": {
          "ref": { "type": "ref", "ref": "my.skylights.defs#item" },
          "rating": { "type": "ref", "ref": "#rating" },
          "note": { "type": "ref", "ref": "#note" },
          "finishedAt": {
            "type": "array",
            "items": { "type": "string", "format": "datetime" }
          }
        },
        "required": ["item"]
      }
    },
    "rating": {
      "type": "object",
      "properties": {
        "value": { "type": "integer", "minimum": 1, "maximum": 10 },
        "createdAt": { "type": "string", "format": "datetime" }
      },
      "required": ["value", "createdAt"]
    },
    "note": {
      "type": "object",
      "properties": {
        "value": { "type": "string" },
        "createdAt": { "type": "string", "format": "datetime" },
        "updatedAt": { "type": "string", "format": "datetime" }
      },
      "required": ["value", "createdAt", "updatedAt"]
    }
  }
}
